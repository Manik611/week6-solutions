
#include <stdio.h>

int canCompleteCircuit(int gas[], int cost[], int n) {
    int totalGas = 0, tank = 0, start = 0;

    for (int i = 0; i < n; i++) {
        totalGas += gas[i] - cost[i];
        tank += gas[i] - cost[i];
        if (tank < 0) {
        
            start = i + 1;
            tank = 0;
        }
    }

    return (totalGas >= 0) ? start : -1;
}

int main() {
    int gas[] = {4, 5, 7, 4};
    int cost[] = {6, 6, 3, 5};
    int n = 4;

    int startStation = canCompleteCircuit(gas, cost, n);
    printf("%d\n", startStation); 

    return 0;
}
